@import "./mixin"
$btn-circle-size-big = 46px
$btn-height-big = 46px


.btn
  line-height: 1em
  btn()
  btn-default()

  .fathom
    height: 100%
    display: inline-block
    vertical-align: middle
    margin-left: 0!important

  > *
    pointer-events none
    vertical-align: middle

  &:hover, &:focus, &:active, &.active
    text-decoration none

  &:before
    position absolute
    top -1px
    left -1px
    bottom -1px
    right -1px
    background #fff
    opacity 0.35
    content ''
    border-radius inherit
    z-index 1
    transition opacity .2s
    pointer-events none
    display none

  > :global(.lat-icon)
    transition margin-left 0.3s ease-in-out;
    vertical-align: middle
    line-height: 1em
    height: 1em

  &.loading:before
    display block

  &.loading:not(.circle):not(.circle-outline):not(.icon-only)
    padding-left 29px
    pointer-events none
    position relative
    :global(.lat-icon)
      margin-left -14px

  &.sm.loading:not(.circle):not(.circle-outline):not(.icon-only)
    padding-left 24px
    :global(.lat-icon)
      margin-left -17px

  &:not(.circle):not(.circle-outline).icon-only
    padding-left 8px
    padding-right 8px

  &:focus > span, &:active > span
    position relative

  > :global(.lat-icon) + span,
  > span + :global(.lat-icon)
    margin-left 8px

  &.clicked:after
    content ''
    position absolute
    top -1px
    left -1px
    bottom -1px
    right -1px
    border-radius inherit
    border-style: solid;
    border-width: 0;
    opacity 0.4
    animation buttonEffect .4s
    display block

.primary
  btn-primary()
  .btn-group &:not(:first-child):not(:last-child)
    border-right-color $btn-group-border
    border-left-color $btn-group-border
    &:disabled
      border-color $btn-default-border
  .btn-group &:first-child
    &:not(:last-child)
      border-right-color $btn-group-border
      &[disabled]
        border-right-color $btn-default-border
  .btn-group &:last-child:not(:first-child), .btn-group & + &
    border-left-color $btn-group-border
    &[disabled]
      border-left-color $btn-default-border

.ghost
  btn-ghost()

.danger
  btn-danger()

.bay
  btn-bay()

.sale
  btn-sale()

.link
  btn-link()
  &
  &.lh,
  &.sm
    height: auto
    border: 0
    padding: 0
    line-height: inherit
    font-size: inherit
  > :global(.lat-icon) + span,
  > span + :global(.lat-icon)
    margin-left: 0.4em;


.circle, .circle-outline
  btn-circle()

.two-chinese-chars:first-letter
  letter-spacing .34em

.two-chinese-chars > *
  letter-spacing .34em
  margin-right -0.34em

@keyframes buttonEffect
  to
    opacity 0
    top -6px
    left -6px
    bottom -6px
    right -6px
    border-width 6px

.group
  btn-group()

