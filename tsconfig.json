{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2015"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": "./",
    "rootDir": ".",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "keyofStringsOnly": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "types" : [],
    "paths": {
      "packages": ["packages"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true,
    "useTranspileModule": true
  },
  "exclude": ["node_modules", "packages/**/*.test.ts", "packages/**/*.spec.ts"],
  "include": ["packages/**/*", "global.d.ts", "translate.d.ts"]
}